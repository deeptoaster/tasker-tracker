{
  "name": "tasker-tracker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "browserslist": "since 0",
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "arrow-body-style": "error",
      "curly": "error",
      "dot-notation": "error",
      "eqeqeq": "error",
      "no-await-in-loop": "error",
      "no-return-await": "error",
      "no-unreachable-loop": "error",
      "no-unsafe-optional-chaining": "error",
      "no-useless-backreference": "error",
      "no-useless-return": "error",
      "no-var": "error",
      "prefer-const": "error",
      "prefer-spread": "error",
      "sort-imports": [
        "error",
        {
          "allowSeparatedGroups": true
        }
      ],
      "sort-keys": "error",
      "@typescript-eslint/array-type": [
        "warn",
        {
          "default": "generic"
        }
      ],
      "react/destructuring-assignment": "error",
      "react/function-component-definition": "error",
      "react/jsx-boolean-value": [
        "error",
        "always"
      ],
      "react/jsx-sort-props": "error",
      "react/prefer-stateless-function": "error",
      "@typescript-eslint/explicit-function-return-type": "error",
      "@typescript-eslint/explicit-member-accessibility": "error",
      "@typescript-eslint/member-ordering": "error",
      "@typescript-eslint/no-unnecessary-boolean-literal-compare": "error",
      "@typescript-eslint/no-unnecessary-condition": "error",
      "@typescript-eslint/no-unnecessary-qualifier": "error",
      "@typescript-eslint/prefer-readonly": "error",
      "@typescript-eslint/sort-type-union-intersection-members": "error",
      "@typescript-eslint/strict-boolean-expressions": "error",
      "@typescript-eslint/switch-exhaustiveness-check": "error",
      "@typescript-eslint/no-empty-function": "off"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "core-js": "^3.8.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-transition-group": "^4.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/react-transition-group": "^4.4.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.2",
    "eslint-config-react-app": "^6.0.0",
    "eslint-webpack-plugin": "^2.5.0",
    "style-loader": "^2.0.0",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "build": "webpack --env production --mode production",
    "start": "webpack serve --hot --mode development --open",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/deeptoaster/tasker-tracker.git"
  },
  "author": "Deep Toaster",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deeptoaster/tasker-tracker/issues"
  },
  "homepage": "http://fishbotwilleatyou.com/tracker/"
}
